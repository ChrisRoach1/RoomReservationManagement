@model IEnumerable<RoomReservationManagement.Models.res_reservations>

@{
	ViewBag.Title = "approvedRequests";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Approved Reservations</h1>
<hr />
<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				Requester
			</th>
			<th>
				Room
			</th>
			<th>
				Start
			</th>
			<th>
				End
			</th>
			<th></th>
		</tr>
	</thead>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.res_name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Res_Rooms.room_name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.res_start)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.res_end)
			</td>

			<td>
				@Html.ActionLink("Cancel Reservation", "cancelReservation", new { id = item.res_id }, new { @class = "btn btn btn-danger", @OnClick = "return confirm('Are you sure you to cancel this reservation?');" })
			</td>
		</tr>
	}

</table>
