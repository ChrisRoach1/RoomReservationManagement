@model RoomReservationManagement.Models.cancelReservation

@{
	ViewBag.Title = "cancelReservation";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cancel Reservation</h2>
<hr />
@using (Html.BeginForm("cancelReservation", "Secretary", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">


		@Html.ValidationSummary(true, "", new { @class = "text-danger" })

		@Html.HiddenFor(model => model.res_id)
		<div class="form-group">
			@Html.LabelFor(model => model.cancelReason, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.TextAreaFor(model => model.cancelReason, new { htmlAttributes = new { @class = "form-control" }, style = "resize: none; width: 900px; height: 125px;" })
				@Html.ValidationMessageFor(model => model.cancelReason, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group" style="margin-top: 30px;">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Cancel Request" class="btn btn-danger" />
			</div>
		</div>
	</div>
}


@if (ViewBag.successValue)
{
	//used to display success message after a reservation is made
	<script>
        Swal.fire(
            'Success!',
            'The reservation has been canceled.',
            'success'
        ).then(function (result){
            window.location = '/Secretary/approvedRequests';
        })
	</script>
}