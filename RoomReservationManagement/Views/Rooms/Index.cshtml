@model IEnumerable<RoomReservationManagement.Models.res_rooms>

@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Content/JS/pannellum/pannellum.js"></script>
<link rel="stylesheet" href="~/Content/JS/pannellum/pannellum.css"/>

<h1>Rooms</h1>
<hr />
<!DOCTYPE HTML>
<style>
    .room {
        padding: 15px;
        background-color: #f2efef;
        border-left: 6px solid #2e9546;
        margin-bottom: 10px;
        -webkit-box-shadow: 0 5px 8px -6px rgba(0,0,0,.2);
        -moz-box-shadow: 0 5px 8px -6px rgba(0,0,0,.2);
        box-shadow: 0 5px 8px -6px rgba(0,0,0,.2);
        border-color: #2e9546;
    }

    .panorama {
        width: 95%;
        height: 100%;
    }

    .column {
        float: left;
        padding: 10px;
    }
    .left {
        width: 30%
    }
    .right {
        width: 70%
    }

    /* Clear floats after the columns */
    .row:after {
        content: "";
        display: table;
        clear: both;
    }


</style>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A simple example</title>
    <link rel="stylesheet" href="~/Content/pannellum/pannellum.css" />
    <script type="text/javascript" src="~/Content/pannellum/pannellum.js"></script>
</head>
<body>

    @foreach (var item in Model)
    {
        <div class="room">
            <div class="panel-group" id="accordion_@item.room_id">
                <div class="panel panel-default" id="panel_@item.room_id">
                    <div class="panel-heading">
                        <h1 class="panel-title">
                            <a style="color:#2e9546; " data-toggle="collapse" data-target="#collapseOne_@item.room_id" href="#collapseOne_@item.room_id">
                                @Html.DisplayFor(modelItem => item.room_name)
                            </a>
                        </h1>
                    </div>
                    <div id="collapseOne_@item.room_id" class="panel-collapse collapse in">
                        <div class="panel-body">
                            <div class="card-body">
                                <div class="row">
                                    <div class="column left">
                                        <table>
                                            <tr>
                                                <th>Location:</th>
                                                <td>@Html.DisplayFor(modelItem => item.location)</td>
                                            </tr>
                                            <tr>
                                                <th>Capacity:</th>
                                                <td>@Html.DisplayFor(modelItem => item.room_cap)</td>
                                            </tr>
                                            <tr>
                                                <th>Computers:</th>
                                                <td>@Html.DisplayFor(modelItem => item.num_comp)</td>
                                            </tr>
                                            <tr>
                                                <th>Chairs:</th>
                                                <td>@Html.DisplayFor(modelItem => item.num_chairs)</td>
                                            </tr>
                                            <tr>
                                                <th>Tables:</th>
                                                <td>@Html.DisplayFor(modelItem => item.num_tables)</td>
                                            </tr>
                                            <tr>
                                                <th>Board Type:</th>
                                                <td>@Html.DisplayFor(modelItem => item.board_typ)</td>
                                            </tr>
                                            <tr>
                                                <th>Network Access:</th>
                                                <td>@Html.DisplayFor(modelItem => item.network_ind)</td>
                                            </tr>
                                            <tr>
                                                <th>Telecon System:</th>
                                                <td>@Html.DisplayFor(modelItem => item.telecon_sys)</td>
                                            </tr>
                                            <tr>
                                                <th>Projector:</th>
                                                <td>@Html.DisplayFor(modelItem => item.proj_ind)</td>
                                            </tr>

                                        </table>              
                                    </div>
                                    <div class="column right">
                                        <div id="pan_@item.room_name" class="panorama"></div>
                                    </div>
                                </div>
                                
                                <script>
                    pannellum.viewer('pan_@item.room_name', {
                        "type": "equirectangular",
                        "panorama": "../../Content/Images/@item.room_name" + ".jpg",
                        "autoLoad": false,
                        "autoRotate": -6,
                        "showControls": false,
                        "draggable": false
                    });
                                </script>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>

