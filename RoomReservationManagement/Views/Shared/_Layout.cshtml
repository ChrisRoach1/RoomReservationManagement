@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/CustomStyle.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/wickedpicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/wickedpicker.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css">

</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <ul class="list-unstyled components">

                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "list-unstyled components" }))
                    {
                        @Html.AntiForgeryToken()

                        <li>
                            @Html.ActionLink(User.Identity.GetUserName(), "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                        </li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                    }
                }
                else
                {
                    <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                }
                @if (User.IsInRole("RR_Admin"))
                {
                    <li>@Html.ActionLink("Admin", "Index", "Home")</li>
                }
                @if (Request.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Rooms", "Index", "Home")</li>
                    <li>@Html.ActionLink("Reserve", "Index", "Home")</li>
                }

            </ul>
        </nav>

        <div class="content">
            @RenderBody()
            <footer id="footer">
                <hr />
                <p>&copy; @DateTime.Now.Year - Bateman Hospital - Room Reserveration</p>
            </footer>
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery-ui-1.12.1.js")
    
   

    @RenderSection("scripts", required: false)
</body>
</html>
