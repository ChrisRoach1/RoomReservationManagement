@model IEnumerable<RoomReservationManagement.Models.res_rooms>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/Content/pannellum/pannellum.js"></script>

<h1>Room Review TEMP</h1>

<!DOCTYPE HTML>
<style>
    .room {
        padding: 15px;
        background-color: #fafafa;
        border-left: 6px solid #7f7f84;
        margin-bottom: 10px;
        -webkit-box-shadow: 0 5px 8px -6px rgba(0,0,0,.2);
        -moz-box-shadow: 0 5px 8px -6px rgba(0,0,0,.2);
        box-shadow: 0 5px 8px -6px rgba(0,0,0,.2);
        border-color: #80D651;
    }

    .button {
        background-color: #4CAF50; /* Green */
        border: none;
        color: white;
        padding: 7px 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
    }

    #panorama {
        width: 600px;
        height: 400px;
    }
</style>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>A simple example</title>
    <link rel="stylesheet" href="~/Content/pannellum/pannellum.css" />
    <script type="text/javascript" src="~/Content/pannellum/pannellum.js"></script>
</head>
<body>

    @* @foreach (var item in Model)
        { *@
    <div id="accordion">
        <div class="room">
            <h1 style="color:#80D651;">Room 123    ★★★★☆</h1>
            <div id="headingOne">
                <button class="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    Create Review
                </button>
            </div>
            <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                <div class="card-body">
                    <table class="table">
                        <h2>
                            ☆☆☆☆☆
                        </h2>
                        <textarea rows="10" cols="50"></textarea>
                        <button class="btn btn-default">Submit</button>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

