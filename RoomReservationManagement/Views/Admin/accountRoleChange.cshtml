@model RoomReservationManagement.Models.accountRoleChange

@{
	ViewBag.Title = "accountRoleChange";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Role Change</h2>
<hr />
@using (Html.BeginForm("accountRoleChange", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			@Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
				@Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.userName)
				@Html.HiddenFor(model => model.userID)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.oldRole, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.EditorFor(model => model.oldRole, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
				@Html.ValidationMessageFor(model => model.oldRole, "", new { @class = "text-danger" })
				@Html.HiddenFor(model => model.oldRole)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(model => model.newRole, htmlAttributes: new { @class = "control-label col-md-2" })
			<div class="col-md-10">
				@Html.DropDownListFor(model => model.newRole, new SelectList(ViewBag.roleList, "roleName", "roleName"),"", new { @class = "form-control" })
				@Html.ValidationMessageFor(model => model.newRole, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group" style="margin-top: 30px;">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Update" class="btn btn-secondary" />
			</div>
		</div>
	</div>
}


@if (ViewBag.successValue)
{
	//used to display success message after a reservation is made
	<script>
        Swal.fire(
            'Success!',
            'Role successfully updated.',
            'success'
        ).then(function (result){
            window.location = '/Admin/ManageUsers';
        })
	</script>
}